<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/cardview_dark_background"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    tools:context=".Profile">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Biodata"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:shadowColor="@color/black"
        android:elevation="1dp"
        android:layout_marginTop="20sp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        >

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#355587">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:text="Nama"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:text="Muhammad Alif Setya Prakasa"
                    android:gravity="right"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:text="Tempat Tanggal Lahir"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:text="Pontianak, 06 Oktober 2000"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:gravity="right"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:text="Asal Sekolah"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:text="SMAN 1 Bontang"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:gravity="right"/>
            </TableRow>

        </TableLayout>

        <ImageView
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_emoji_people_24" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp"
        >
        <com.google.android.material.button.MaterialButton
            android:layout_width="180dp"
            android:layout_height="52dp"
            app:icon="@drawable/ic_baseline_arrow_back_24"
            app:iconGravity="textStart"
            android:id="@+id/back"
            android:background="#354597"
            app:backgroundTint="@null"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="180sp"
            android:layout_marginLeft="15dp"
            android:layout_height="52dp"
            app:icon="@drawable/ic_baseline_power_settings_new_24"
            app:iconGravity="textStart"
            android:background="#D12E07"
            android:id="@+id/profileLogout"
            app:backgroundTint="@null"/>
    </LinearLayout>
</LinearLayout>